<core:FragmentDefinition
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="openDialogLinkProfile"
        title="{i18n>linkProfileTitle}"
        contentWidth="500px"
        verticalScrolling="false"
        horizontalScrolling="false"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="simpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    class="customSimpleForm"
                >
                    <f:content>
                        <Label
                            text="Objeto do perfil"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="FieldName"
                            visible="true"
                            maxLength="30"
                            app:SuggestionTable="/XCOP/TFSC_SCTRL:Fieldname.Viewname"
                            app:DataType="CHAR"
                            app:Leng="30"
                            app:Mask=""
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi="X"
                            app:TableName=""
                            app:FieldName=""
                            app:Filter="Active EQ 'X' AND Authorid EQ '' AND Bname EQ '' AND Lifnr EQ ''"
                            app:Submit="onAddFieldsProfile"
                            showSuggestion="true"
                            showValueHelp="true"
                            submit="onSubmitInput"
                            change="onCheckInput"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />
                        <Text id="FieldNameLabel" />

                        <List
                            id="ListFields"
                            includeItemInSelection="true"
                            mode="MultiSelect"
                        >
                            <headerToolbar>
                                <OverflowToolbar id="OverflowToolbarProfile">
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            icon="sap-icon://multiselect-all"
                                            type="Default"
                                            press="onSelectAllList"
                                        />
                                        <Button
                                            icon="sap-icon://multiselect-none"
                                            type="Default"
                                            press="onDeselectAllList"
                                        />
                                        <Button
                                            icon="sap-icon://add"
                                            type="Default"
                                            id="ButtonAddGrouping"
                                            press="onAddFieldsProfile"
                                        />
                                        <Button
                                            icon="sap-icon://delete"
                                            type="Default"
                                            press="onDelFieldsProfile"
                                        />
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                        </List>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                tooltip="Salvar"
                id="btSaveProfile"
                icon="sap-icon://save"
                text="Salvar"
                type="Emphasized"
                press="onSaveFieldsProfile"
            />
        </beginButton>
        <endButton>
            <Button
                tooltip="Cancelar"
                icon="sap-icon://cancel"
                text="Cancelar"
                type="Reject"
                press="_onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
