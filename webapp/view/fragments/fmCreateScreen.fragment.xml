<core:FragmentDefinition 
      xmlns="sap.m"
	  xmlns:m="sap.m"
	  xmlns:f="sap.ui.layout.form"
	  xmlns:form="sap.ui.comp.smartform"
	  xmlns:sf="sap.ui.comp.smartfield"
      xmlns:core="sap.ui.core">

      <Dialog 
	  	id="openDialogScreen" 
		title="{i18n>screenControlDialogTitle}"
		contentWidth="60%">
		<content>
			<VBox class="sapUiSmallMargin" id="formContainer" >
				<f:SimpleForm  editable="true" layout="ResponsiveGridLayout">
					<f:content>
						<Table items="{components>/componentsSet}">
							<columns>
								<Column>
									<Text text="View" />
								</Column>
								<Column>
									<Text text="Campo" />
								</Column>
								<Column>
									<Text text="Tipo" />
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{components>viewName}" />
										<Text text="{components>fieldName}" />
										<Text text="{components>fieldType}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<beginButton>
			<Button tooltip="Add" icon="sap-icon://save" text="Ativar" type="Emphasized" press="onCreateEntryScreen"/>
		</beginButton>
		<endButton>
			<Button tooltip="Cancelar" icon="sap-icon://cancel" text="Cancelar" type="Reject" press="onCancelDialogScreen"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>