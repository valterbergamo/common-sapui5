<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <Dialog
        id="openDialogSearhHelp"
        title="{i18n>searchHelpTitle}"
        contentWidth="30%"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="formContainer"
                justifyContent="Center"
            >
                <Input
                    type="text"
                    id="valueSearchHelpId"
                    liveChange="onSearchHelpChange"
                    placeholder="Informe critÃ©rio de pesquisa..."
                />
                <List
                    id="ListSuggestion"
                    includeItemInSelection="true"
                    mode="SingleSelectMaster"
                    growing="true"
                    selectionChange="onSearchHelpSelection"
                    growingThreshold="20"
                    growingScrollToLoad="false"
                    
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                id="btClose"
                tooltip="Add"
                text="OK"
                type="Emphasized"
                press="onCloseSearchHelpDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
