<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="openDialogProfile"
        title="{i18n>titleProfile}"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="formContainer"
            >
                <Label
                    text="ID do perfil"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="Authorid"
                    visible="true"
                    maxLength="7"
                    app:SuggestionTable="/XCOP/TFSC_AUTH:Authorid"
                    app:DataType="CHAR"
                    app:Leng="10"
                    app:Mask=""
                    app:Decimals=""
                    app:UpperCase="X"
                    app:Valexi=""
                    app:TableName=""
                    app:FieldName=""
                    app:Filter="Active EQ 'X' AND Lifnr EQ '' AND Bname EQ ''"
                    showSuggestion="true"
                    showValueHelp="false"
                    suggest="onSuggest"
                    liveChange="onLiveChange"
                    valueHelpRequest="onSearchHelp"
                />
                <VBox height="10px"/>
                <Label
                    text="Título"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="Authortitle"
                    visible="true"
                    maxLength="30"
                    app:SuggestionTable="/XCOP/TFSC_AUTH:Authortitle"
                    app:DataType="CHAR"
                    app:Leng="30"
                    app:Mask=""
                    app:Decimals=""
                    app:UpperCase=""
                    app:Valexi=""
                    app:TableName=""
                    app:FieldName=""
                    app:Filter=""
                    showSuggestion="true"
                    showValueHelp="false"
                    suggest="onSuggest"
                    liveChange="onLiveChange"
                    valueHelpRequest="onSearchHelp"
                />
                <VBox height="10px"/>
                <Label
                    text="Descrição"
                    design="Bold"

                />
                <TextArea
                    id="Description"
                    width="100%"
                    height="150px"
                    maxLength="255"
                />

                <CheckBox
                    id="Active"
                    text="Ativo"
                />

                

            </VBox>
        </content>
        <beginButton>
            <Button
                id="btCreateEntryProfile"
                tooltip="Add"
                icon="sap-icon://save"
                text="Salvar"
                type="Emphasized"
                press="onCreateEntryProfile"
            />
        </beginButton>
        <endButton>
            <Button
                id="btCancelDialogProfiles"
                tooltip="Add"
                icon="sap-icon://cancel"
                text="Cancelar"
                type="Reject"
                press="_onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
