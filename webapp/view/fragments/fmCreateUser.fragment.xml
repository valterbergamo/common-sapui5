<core:FragmentDefinition
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="openDialogUser"
        title="{i18n>usersViewTitle}"
        contentWidth="500px"
        contentHeight="300px"
        verticalScrolling="false"
        horizontalScrolling="false"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="formContainer"
            >
                <f:SimpleForm
                    id="simpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    class="customSimpleForm"
                >
                    <f:content>
                        <Label
                            text="UsuÃ¡rio SAP"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="Bname"
                            visible="true"
                            maxLength="35"
                            app:SuggestionTable=""
                            app:DataType="CHAR"
                            app:Leng="35"
                            app:Mask=""
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi=""
                            app:TableName="/XCOP/TFSC_USERS"
                            app:FieldName="Bname"
                            app:Filter=""
                            showSuggestion="true"
                            showValueHelp="true"
                            submit="onSelectUser"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />

                        <Label
                            text="Email"
                            design="Bold"
                        />
                        <Input
                            id="SmtpAddr"
                            visible="true"
                            maxLength="241"
                            placeholder=""
                            app:SuggestionTable="adr6:smtp_addr"
                            app:DataType="CHAR"
                            app:Leng="241"
                            app:Mask=""
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi=""
                            app:TableName=""
                            app:FieldName=""
                            app:Filter=""
                            showSuggestion="true"
                            showValueHelp="false"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />

						<Label
                            text="Ramal"
                            design="Bold"
                        />
                        <Input
                            id="TelNumber"
                            visible="true"
                            maxLength="8"
                            placeholder="Numero do ramal"
                            app:SuggestionTable=""
                            app:DataType="CHAR"
                            app:Leng="7"
                            app:Mask="___-____"
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi=""
                            app:TableName=""
                            app:FieldName=""
                            app:Filter=""
                            showSuggestion="false"
                            showValueHelp="false"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />

                        <VBox height="10px"/>
                        <CheckBox
                            id="Active"
                            text="Ativo"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="btCreateEntryUsers"
                tooltip="Add"
                icon="sap-icon://save"
                text="Salvar"
                type="Emphasized"
                press="onCreateEntryUsers"
            />
        </beginButton>
        <endButton>
            <Button
                id="btCancelDialogUsers"
                tooltip="Add"
                icon="sap-icon://cancel"
                text="Cancelar"
                type="Reject"
                press="_onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
