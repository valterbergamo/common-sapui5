<core:FragmentDefinition
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="openDialogPartner"
        title="{i18n>partnersViewTitle}"
        contentWidth="500px"
        contentHeight="300px"
        verticalScrolling="false"
        horizontalScrolling="false"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="formContainer"
            >
                <f:SimpleForm
                    id="simpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    class="customSimpleForm"
                >
                    <f:content>
                        <Label
                            text="MatrÃ­cula parceiro"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="Lifnr"
                            visible="true"
                            maxLength="35"
                            app:SuggestionTable="/XCOP/VFSC_LFA1:Lifnr.Name1"
                            app:DataType="CHAR"
                            app:Leng="35"
                            app:Mask="SerchUpperCase"
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi=""
                            app:TableName=""
                            app:FieldName=""
                            app:Filter=""
                            showSuggestion="true"
                            showValueHelp="true"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />

                        <Label
                            text="Nome do parceiro"
                            design="Bold"
                        />
                        <Input
                            id="Name1"
                            visible="true"
                            maxLength="35"
                            placeholder="Vazio para utilizar nome da XK03"
                            app:SuggestionTable=""
                            app:DataType="CHAR"
                            app:Leng="35"
                            app:Mask=""
                            app:Decimals=""
                            app:UpperCase=""
                            app:Valexi=""
                            app:TableName=""
                            app:FieldName=""
                            app:Filter=""
                            showSuggestion="false"
                            showValueHelp="false"
                            suggest="onSuggest"
                            liveChange="onLiveChange"
                            valueHelpRequest="onSearchHelp"
                        />

                        <VBox height="10px"/>
                        <CheckBox
                            id="Active"
                            text="Ativo"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="btCreateEntryPartners"
                tooltip="Add"
                icon="sap-icon://save"
                text="Salvar"
                type="Emphasized"
                press="onCreateEntryPartners"
            />
        </beginButton>
        <endButton>
            <Button
                id="btCancelDialogPartners"
                tooltip="Add"
                icon="sap-icon://cancel"
                text="Cancelar"
                type="Reject"
                press="_onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
